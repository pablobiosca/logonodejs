<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include("partials/head.ejs") %>
  </head>
  <body>
    <%- include("partials/navigation.ejs") %> 
    <div class="container vh-100 d-flex justify-content-center align-items-center">
      <div class="card bg-dark text-center text-white">
        <div class="card-header">
          <h3>Contact me</h3>
        </div>
        <div class="card-body text-start">
          <form method="post" action="/recoger">

            <div class="mb-3">
              <label for="email">Email</label>
              <input type="email" placeholder="Email" class="form-control" name="email">
            </div>

            <div class="mb-3">
              <label for="Message">Message</label>
              <textarea class="form-control" type="text" placeholder="Add message here..." rows="3" name="message"></textarea>
            </div>

            <input type="submit" class="btn btn-primary col-12"></input>

          </form>
        </div>
      </div>
    </div>
    <%- include("partials/footer.ejs") %> 
  </body>
</html>